{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb",
        "airbnb-typescript",
        "plugin:react/jsx-runtime"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "eslint-plugin-only-warn"
    ],
    "rules": {
        "max-len": [
            "error",
            100
        ],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off",
        "arrow-parens": "off",
        "object-curly-newline": "off",
        "operator-linebreak": "off",
        "no-mixed-operators": "off",
        "import/prefer-default-export": "off",
        "no-await-in-loop": "off",
        "jsx-a11y/mouse-events-have-key-events": "off",
        "react/button-has-type": "off",
        "react/jsx-closing-bracket-location": "off",
        "padded-blocks": "off",
        "react/require-default-props": "off",
        "no-param-reassign": [
            "error", {
                "props": false
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "server.js",
                "server-src/**/*.js"
            ],
            "env": {
                "browser": false,
                "node": true
            }
        }
    ]
}
