{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "max-len": [
            "error",
            100
        ],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off",
        "arrow-parens": "off",
        "object-curly-newline": "off"
    },
    "overrides": [
        {
            "files": [
                "server.js",
                "server-src/**/*.js"
            ],
            "env": {
                "browser": false,
                "node": true
            }
        }
    ]
}
